{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "listFiles": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noEmitOnError": false,
    "strictNullChecks": true,
    "outDir": "./tmp",
    "rootDirs": [
      "src/scripts",
      "generated/css"
    ],
    "types": [
      "webpack-env"
    ]
  },
  "exclude": [
    "tmp",
    "dist",
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
