{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2016", "es2017", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "listFiles": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "outDir": "./tmp",
    "baseUrl": "./src"
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
